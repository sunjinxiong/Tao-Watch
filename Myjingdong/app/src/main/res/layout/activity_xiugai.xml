<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sjx.bawei.com.myjingdong.activity.XiugaiActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/jsbundles_jdreactnewproduct_images_user_header"
        android:layout_above="@+id/xiugai_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp" />

    <EditText
        android:id="@+id/xiugai_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ass"

        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/xiugai_name"
        android:layout_alignStart="@+id/xiugai_name"
        android:layout_marginTop="16dp"
        android:id="@+id/imageView3" />

    <TextView

        android:id="@+id/xiugai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

</RelativeLayout>
